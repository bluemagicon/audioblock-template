{% sw_extends '@Storefront/storefront/utilities/offcanvas.html.twig' %}


{% block utilities_offcanvas_content %}
    <div class="product-detail-description-custom">
        <div class="row align-items-center">
            <div class="col-lg-6">
                {{ page.product.customFields.custom_highlights_textfield | raw }}
            </div>
            <div class="col-lg-6">
                {# simplify ID access #}
                {% set imgId = page.product.customFields.custom_highlights_image %}

                {# fetch media as batch - optimized for performance #}
                {% set mediaCollection = searchMedia([imgId], context.context) %}

                {# extract single media object #}
                {% set imgMedia = mediaCollection.get(imgId) %}
                <div class="img-wrapper">
                    <img src="{{ imgMedia.url }}" alt="{{ imgMedia.fileName }}" />
                </div>
            </div>
        </div>
    </div>
{% endblock %}
